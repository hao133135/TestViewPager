<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/un_enable_gray"
        android:orientation="vertical">

        <include layout="@layout/layout_diving_head_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/fragment_driving_school_registration_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/jiaolianduan_zigeshengqing"
                android:paddingTop="10dp"
                android:text="申请资格"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fragment_driving_appointment_teacher_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/jiaolianduan_jiaoxueshezhi"
                android:paddingTop="10dp"
                android:text="教学设置"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fragment_driving_appointment_examination_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/jiaolianduan_jiaoxuejilu"
                android:paddingTop="10dp"
                android:text="教学记录"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fragment_driving_learn_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/jiaolianduan_tixianshengqing"
                android:paddingTop="10dp"
                android:text="提现申请"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/fragment_driving_platform_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/jiakao_yungou"
                android:paddingTop="10dp"
                android:text="云购平台"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fragment_driving_lucky_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/jiakao_choujiang"
                android:paddingTop="10dp"
                android:text="抽奖屋"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fragment_driving_practice_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/jiakao_monilianxi"
                android:paddingTop="10dp"
                android:text="模拟练习"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fragment_driving_exam_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/jiakao_monikaoshi"
                android:paddingTop="10dp"
                android:text="模拟考试"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="start"
                    android:paddingLeft="5dp"
                    android:text="驾校推荐"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fragment_driving_recommend_left_school_iv"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />


                    <TextView
                        android:id="@+id/fragment_driving_recommend_left_school_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:text="凤凰驾校"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/fragment_driving_recommend_left_school_tip_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:text="每天一次特大优惠"
                        android:textColor="@color/txt_gray"
                        android:textSize="19sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fragment_driving_recommend_right_top_school_iv"
                            android:layout_width="match_parent"
                            android:layout_height="84dp" />

                        <TextView
                            android:id="@+id/fragment_driving_recommend_right_top_school_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:text="凤凰驾校"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/fragment_driving_recommend_right_top_school_tip_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:text="每天一次特大优惠"
                            android:textColor="@color/txt_gray"
                            android:textSize="19sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fragment_driving_recommend_right_bottom_school_iv"
                            android:layout_width="match_parent"
                            android:layout_height="84dp" />

                        <TextView
                            android:id="@+id/fragment_driving_recommend_right_bottom_school_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:text="凤凰驾校"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/fragment_driving_recommend_right_bottom_school_tip_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:text="每天一次特大优惠"
                            android:textColor="@color/txt_gray"
                            android:textSize="19sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="23dp"
                android:paddingTop="12dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="start"
                    android:paddingLeft="5dp"
                    android:text="驾校推荐"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/fragment_driving_school_recommend_list_more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/xueyuanduan_xiala"
                    android:text="全部入榜驾校"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <com.edriving.view.MyListView
                android:id="@+id/fragment_driving_hot_school_mlv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="22dp"></com.edriving.view.MyListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="23dp"
                android:paddingTop="12dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="start"
                    android:paddingLeft="5dp"
                    android:text="热门教练"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/fragment_driving_teacher_recommend_list_more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/xueyuanduan_xiala"
                    android:text="全部入榜教练"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <com.edriving.view.MyListView
                android:id="@+id/fragment_driving_hot_teacher_mlv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="22dp"></com.edriving.view.MyListView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

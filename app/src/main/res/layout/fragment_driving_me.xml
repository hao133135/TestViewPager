                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:text="我的主页"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:src="@mipmap/wo_erweima" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/xueyuanduan_xiala" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="@color/un_enable_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/fragment_mine_user_collection_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/xueyuanduan_shoucang"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="收藏"
                android:textSize="14sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/un_enable_gray" />

            <TextView
                android:id="@+id/fragment_mine_user_setting_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/wo_shezhi"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="设置"
                android:textSize="14sp" />
        </LinearLayout>

        <View

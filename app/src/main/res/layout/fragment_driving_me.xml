            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="12dp">

            <ImageView
